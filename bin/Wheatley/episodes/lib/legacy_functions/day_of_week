#!/bin/bash

day_of_week() {
        case "$1" in
          "1") echo "Monday";;
          "2") echo "Tuesday";;
          "3") echo "Wednseday";;
          "4") echo "Thursday";;
          "5") echo "Friday";;
          "6") echo "Saturday";;
          "7") echo "Sunday";;
          "0") echo "Sunday";;
         esac
} #day_of_week

