#!/bin/bash

##############################
### get_movie_json
### Downloads json from TMDB
##############################
function get_movie_json() {
        tmdb_id="$1"
        output="$2"
        MOVIE_SEARCH_STRING="$TMDB_URL/movie/$tmdb_id?$API_KEY&append_to_response=releases,credits,keywords"
        #echo -e "${yellow}$MOVIE_SEARCH_STRING${NC}"
        MOVIE_SEARCH=`curl -s "$MOVIE_SEARCH_STRING"`
        echo "$MOVIE_SEARCH" 
} #END get_movie_json

