#!/bin/bash


function build_paths() {
#1 - set
#2 - collection
#3 - title
#4 - year
myPath=
superset=$(echo "select name from $setTable where id=$1" |mysql $dbOptions)
collection=$(echo "select name from $collectionTable where id=$2" |mysql $dbOptions)

if [ "$superset" != "" ]; then
 add=$(sanitize "$superset")
 myPath="$myPath/$add Set"
fi
if [ "$collection" != "" ]; then
 add=$(sanitize "$collection")
 myPath="$myPath/$add Collection"
fi
 add=$(sanitize "$3")
 myPath="$myPath/$add ($4)"

if [ "$5" == "url" ]; then
 myPath=`echo "$myPath" |sed 's;\ ;\%20;g'`
fi

echo "$myPath"

#moviePath
#webPath
} #END build_paths
