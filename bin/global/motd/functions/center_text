#!/bin/bash

function center_text(){
 stringZ="$1"
  stringY=$(stripcolors "$stringZ")
 if [ "$2" == "0" ]; then
  TSpace=$(($MOTD_WIDTH-$LOGO_WIDTH))
 else
  TSpace=$(($MOTD_WIDTH-1))
 fi
 SpaceAvail=$(($TSpace-${#stringY}))
  ##make it an even number
  [ $((SpaceAvail%2)) -ne 0 ] && SpaceAvail=$((SpaceAvail+1))
 SpaceAvail=$((SpaceAvail/2))

 c=1
 l=
# l="$SpaceAvail"
# c="${#l}"
 while [ $c -le $SpaceAvail ]; do
  l="${l} "
  c=$((c+1))
 done
  l="${l}${stringZ}"
 echo -en "$l" 
} ##center_text

