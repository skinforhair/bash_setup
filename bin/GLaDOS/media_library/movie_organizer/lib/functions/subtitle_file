#!/bin/bash

function subtitle_file() {
  #search for srt file
 lookDir=$(dirname "$1")
 letters=3
 secGrep=${checkName:0:$letters}
 srtCount=$(ls "$lookDir" |grep .srt |grep "$secGrep" |wc -l)
 if [ $srtCount -gt 0 ]; then
  while [ $srtCount -gt 1 ]; do
   letters=$((letters+1))
   secGrep=${checkName:0:$letters}
   srtCount=$(ls "$lookDir" |grep .srt |grep "$secGrep" |wc -l)
  done
  echo $(ls "$lookDir" |grep .srt |grep "$secGrep")
 fi
} #END subtitle_file
