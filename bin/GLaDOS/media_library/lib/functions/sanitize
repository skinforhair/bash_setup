#!/bin/bash

#######################################
### sanitize
### Takes input string and returns
### a sanitized version
#######################################
function sanitize() {
 stringZ="$1"
# stringZ=`echo "$stringZ" |sed "s;';'';g"`
 stringZ=`echo "$stringZ" |sed 's;/;-;g'`
 stringZ=`echo "$stringZ" |sed 's;\:;-;g'`
# stringZ=`echo "$stringZ" |sed 's;/;-;g'`
# stringZ=`echo "$stringZ" |sed 's;-\.;-;g'`
# stringZ=`echo "$stringZ" |sed 's;\.\.;\.;g'`
# stringZ=`echo "$stringZ" |sed "s;\â';g"`
# stringZ=`echo "$stringZ" |sed "s;\é;e;g"`
# stringZ=`echo "$stringZ" |sed "s;\ÃAe;g"`
# stringZ=`echo "$stringZ" |sed "s;\æ;ae;g"`
# stringZ=`echo "$stringZ" |sed "s;\Ãa;g"`
# stringZ=`echo "$stringZ" |sed "s;Ã .;a;g"`
 if [ "$2" = "filename" ]; then
  stringZ=`echo "$stringZ" |sed 's;\ ;.;g'`
  stringZ=`echo "$stringZ" |sed 's;\.\.\.;;g'`
#else
# stringZ=`echo "$stringZ" |sed 's;\.\.\.;.;g'`
 fi
 echo "$stringZ"
} #END sanitize

