#!/bin/bash

function log_start(){
 echo -e "------------------------------------------" >> $LOGFILE
 echo -e $(date "+%b %d %H:%M:%S") $(whoami) $0 >> $LOGFILE
 
} ##log_start

function log_action(){
 NOW=$(date "+%b %d %H:%M:%S")
  if [ "$2" == "start" ]; then
    echo -en "  [$NOW] Checking ${1}..." >> $LOGFILE
  else
    if [ "$1" != "" ]; then
     echo -e "$1" >> $LOGFILE
    fi
  fi
 T=$(date +%s)
 echo -en "$T"
}

function log_stop(){
 NOW=$(date "+%b %d %H:%M:%S")
    echo -e "  [$NOW] Process finished after $RunningTime Seconds" |tee $LOGFILE
}
