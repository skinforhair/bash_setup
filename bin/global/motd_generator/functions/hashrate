#!/bin/bash

function hashrate(){
 addr=$(hostAddress "$1")
 status="$(check_ssh $1)"
 HS=" H/s"
 if [ "$status" == "0" ]; then
  Hashes=$(ssh jar@$addr "tail -50 /var/log/xmrig.log|grep \"H/s\"|tail -1")
  cur=$(echo "$Hashes" |awk '{print $5}')
  max=$(echo "$Hashes" |awk '{print $10}')
 else
  cur=0
 fi

  if [ "$2" == "simple" ]; then
   echo -e "$cur"
  else
   [ "$status" == "0" ] && echo -en "${green}" || echo -en "${red}"
   echo -en "$1${NC} : ${white}$cur${NC}$HS"
  fi
} ##hashrate
