#!/bin/bash

gFUNCTIONS="${GEOBLOCK}/functions"
gLIB="${GEOBLOCK}/lib"
gZONES="${GEOBLOCK}/zones"

gCOUNTRIES="${gZONES}/countries"
gIPSETS="${gZONES}/ipsets"

CountryList="${gLIB}/COUNTRY_LIST"


IPDENY="http://ipdeny.com/ipblocks/data/countries/"
ZoneTGZ="all-zones.tar.gz"


TMP="${GEOBLOCK}/superTEMPfile.txt"
AllZONES="${ZoneDir}/all_zones_at_ipdeny.txt"

WHITELIST="${GEOBLOCK}/whitelist"
UPDATED="${GEOBLOCK}/.last_update"

for f in ${gFUNCTIONS}/*; do [ -f $f ] && source $f;done
[ "$USE_FIREWALLD" == "yes" ] && source "${gLIB}/firewalld.cfg"
