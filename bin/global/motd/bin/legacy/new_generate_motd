#!/bin/bash

#set paths
DIR="/shares/filesystem/motd"
for f in $DIR/functions/*; do if [ -f $f ]; then source $f;fi;done
TMPDir="$DIR/tmp"

rm $TMPDir/*

MOTD="/etc/motd"
INFO="$TMPDir/info.txt"
LAN="$TMPDir/lan.txt"
CAM="$TMPDir/cameras.txt"
SVC="$TMPDir/services.txt"
RIG="$TMPDir/mining_rigs.txt"
ETN="$TMPDir/ETN_stats.txt"
Aperture="$TMPDir/aperture.txt"
LOGFILE="$TMPDir/motd.log"
WIDTH=112

#colors for Aperture Logo
 AC1="$(echo $white)"
 AC2="$(echo $yellow)"


RunningTime=0

wanIP=$(localWAN)

#Aperture Science Logo
print_aperture_tmpfile "$AC1" "$AC2"

banner "Welcome to $(hostname)        $(localWAN)" "$INFO"

group "Cortana,Scholomance,Wheatley,R2D2,BB8,VPN" "LAN Machines" "2" "$LAN"

group "FrontPorch,EastGarage,BackPorch,WestGarage,BackYard" "Cameras" "2" "$CAM"

group "Apache,SMB,MySQL" "Services" "3" "$SVC"

merge_files
