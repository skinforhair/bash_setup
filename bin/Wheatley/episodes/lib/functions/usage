#!/bin/bash

function usage() {
        echo "Usage: $0 [ options ]"
        echo " Options:
                [D]ownload   : Attempt to download all available episodes
                [A]ired      : List shows that have aired and not downloaded
		[A]vailable  : Same as Aired
                [U]pcoming   : List upcoming episodes (next 7 days)
		[F]ull       : List upcoming episodes (next 365 days)
		[Number]     : List upcoming episodes (number of days)
                [R]efresh    : Check database and get fresh list
             "
        exit 1;
} #usage

