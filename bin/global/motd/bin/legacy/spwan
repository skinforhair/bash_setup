#!/bin/bash
 for f in /root/.bin/lib/*; do source $f; done
 
 ### - Find local path (See /home/jejackso/.bin/lib/.localize) ###
 SOURCE="${BASH_SOURCE[0]}"
 while [ -h "$SOURCE" ]; do
  DIR="$( cd -P "." && pwd )"
  SOURCE="$(readlink "$SOURCE")"
   [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
 done
 DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
 
 clear
 
 LHOST=$(hostname)
 
 function block_line(){
  count=0
  numblocks=$1
  if [ "$2" == "" ]; then
      color="blank"
      blocktype=" "
  else
      color=$2
      blocktype=$3
  fi
 
  if [ "$color" != "blank" ] && [ "$color" != "" ]; then
      echo -en "${color}"
  fi
   while [ $count -lt $numblocks ]; do
      echo -en "$blocktype"
      count=$((count+1))
   done
   echo -en "${NC}"
 } #end block_line
 
 function face_edge(){
  echo -en "${Black}$righthalf${BIBlack}$block8${Black}$dot1"
 } #end face_edge

 function mLine(){
  spawn="$1"
  lineNum="$2"
  echo -en "$spawn"
  echo -en "${NC}"
 
  if [ $lineNum -le 6 ]; then
   case "$lineNum" in
    1) echo "  ________.____          ________    _____   _________";;
    2) echo " /  _____/|    |  _____  \\______ \\  /  _  \\ /   _____/";;
    3) echo "/   \\  ___|    |  \\__  \\  |    |  \\/   |   \\\\_____  \\ ";;
    4) echo "\\    \\_\\  \\    |___/ __ \_|    \`   \\   |   //        \\";;
    5) echo " \\______  /______ (____  /_______  /\\_____/________  /";;
    6) echo "        \\/       \\/    \\/        \\/                \\/ ";;
   esac
  else
      o=$((lineNum-5))
      oLine=$(cat /etc/motd |head -$o |tail -1)
      echo "$oLine"
  fi
 
 } #end mLine



stringZ="$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)$(block_line 1)"
stringZ="$stringZ$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 2)"
mLine "$stringZ" 1

stringZ="$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 2 $black $block1)"
stringZ="$stringZ$(block_line 2 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 3)"
mLine "$stringZ" 2

stringZ="$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 3)"
mLine "$stringZ" 3

stringZ="$(block_line 1)$(block_line 1 $black $block1)$(block_line 3 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 3 $black $dot2)$(block_line 1 $black $dot1)$(block_line 1 $black $block1)"
mLine "$stringZ" 4

stringZ="$(block_line 1 $black $block1)$(block_line 9 $black $dot2)"
stringZ="$stringZ$(block_line 1)"
mLine "$stringZ" 5

stringZ="$(block_line 1 $black $block1)$(block_line 5 $black $dot2)$(block_line 1 $red $block1)$(block_line 3 $black $dot2)$(block_line 1 $black $block1)"
mLine "$stringZ" 6

stringZ="$(block_line 1 $black $block1)$(block_line 4 $black $dot2)$(block_line 1 $red $block1)$(block_line 2 $black $dot2)$(block_line 1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)"
mLine "$stringZ" 7

stringZ="$(block_line 1 $black $block1)$(block_line 1 $black $dot2)$(block_line 1)$(block_line 5 $black $dot2)$(block_line 2)$(block_line 1 $black $dot2)$(block_line 1 $black $block1)"
mLine "$stringZ" 8

stringZ="$(block_line 1)$(block_line 1 $black $block1)$(block_line 1 $black $dot2)$(block_line 2)$(block_line 6 $black $dot2)$(block_line 1 $black $block1)"
stringZ="$stringZ$(block_line 3)$(block_line 6 $black $block1)"
mLine "$stringZ" 9

stringZ="$(block_line 2)$(block_line 1 $black $block1)$(block_line 4 $black $dot2)$(block_line 1 $red $dot2)$(block_line 4 $black $dot2)$(block_line 1 $black $block1)$(block_line 1)$(block_line 1 $black $block1)$(block_line 6 $white $block1)$(block_line 1 $black $block1)"
mLine "$stringZ" 10

stringZ="$(block_line 3)$(block_line 3 $black $block1)$(block_line 7 $black $dot2)$(block_line 2 $black $block1)$(block_line 7 $white $block1)$(block_line 1 $black $block1)"
mLine "$stringZ" 11

stringZ="$(block_line 5)$(block_line 1 $black $block1)$(block_line 2 $black $dot2)$(block_line 1 $black $block1)$(block_line 6 $black $dot2)$(block_line 1 $black $block1)$(block_line 2 $white $block1)$(block_line 3 $black $dot2)$(block_line 1 $white $block1)$(block_line 1 $black $block1)"
mLine "$stringZ" 12



