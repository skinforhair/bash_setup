#!/bin/bash

#Grabs internet IP address
function localWAN(){
 [ "${HOSTNAME,,}" == "glados" ] && WAN="$(dig +short myip.opendns.com @resolver1.opendns.com)" || WAN=$(ssh -q jar@192.168.1.143 "dig +short myip.opendns.com @resolver1.opendns.com;exit")
 echo -e "$WAN"
} ##localWAN

function Print_localWAN(){
 WAN="$(dig +short myip.opendns.com @resolver1.opendns.com)"
 echo -e "${white}WAN IP: ${cyan}$WAN${NC}"
} ##Print_localWAN

