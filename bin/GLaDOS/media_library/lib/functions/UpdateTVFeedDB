#!/bin/bash

function UpdateTVFeedDB() {
 size="$5"
 size="${size:0:$((${#size}-2))}"
   showID=$(echo "select id from $tvshows where showname=\"$1\""| mysql $dbOptions)
 foundit=$(echo "select id from $tv_feed where showID=$showID and season=$2 and episode=$3" |mysql $dbOptions)
    title=$(cleanTitle "$4")
    airdate=$(airDate "$4")
        
    if [ "$foundit" != "" ]; then
        query="Update $tv_feed set showID='$showID', season='$2', episode='$3', title='$title', airdate='$airdate', filesize='$5', quality='$6', length='$7', filetype='$8' where id='$foundit'"
    else
        query="Insert into $tv_feed(id, showID, season, episode, title, airdate, filesize, quality, length, filetype) values ('','$showID','$2','$3','$title', '$airdate', '$5', '$6', '$7', '$8')"
    fi
        insert=$(echo $query |mysql $dbOptions)
        #echo "insert was $insert"
} #end UpdateTVFeedDB

