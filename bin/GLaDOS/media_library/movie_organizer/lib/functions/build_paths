#!/bin/bash


function build_paths() {
shelfID=${searchTerms[25]}
collectionID=${searchTerms[23]}
title=${searchTerms[1]}
year=${searchTerms[2]}

myPath=
shelf=$(echo "select name from $shelfTable where id=$shelfID" |mysql $dbOptions)
collection=$(echo "select name from $collectionTable where id=$collectionID" |mysql $dbOptions)

if [ "$shelf" != "" ]; then
 add=$(sanitize "$shelf")
 myPath="$myPath/$add Set"
fi
if [ "$collection" != "" ]; then
 add=$(sanitize "$collection")
 myPath="$myPath/$add Collection"
fi
 add=$(sanitize "$title")
 myPath="$myPath/$add ($year)"

if [ "$1" == "url" ]; then
 myPath=`echo "$myPath" |sed 's;\ ;\%20;g'`
 myPath=`echo "$myPath" |sed 's;\?;\%3f;g'`
 myPath="$webPath$myPath"
else
 myPath="$moviePath$myPath"
fi

echo "$myPath"

} #END build_paths
