#!/bin/bash

function isOnline(){
 #prints out host onine status
 case "${1,,}" in
  "cortana") tst="ping";;
  "wheatley" | "r2d2" | "bb8" | "scholomance" | "spp") tst="ssh";;
  "frontporch" | "backporch" | "backyard" | "eastgarage" | "westgarage") tst="ping";;
  "vpn") tst="vpn";;
  "smb" | "samba" | "apache" | "httpd" | "http" | "mysql") tst="service";;
  "space"|"spacesphere" | "van" | "rick" | "shodan") tst="ssh";;
  "etn-usd" | "etn-btc" | "etn-hour" | "etn-day" | "etn-week" ) tst="etn_values";;
  "etn-act" | "etn-cur-usd") tst="etn_acct";;
  *) tst="printIt";;
 esac

 case "$tst" in
  "vpn") echo -en "$(check_vpn $HOSTNAME)";;
  "service") echo -en "$(serviceStatus $1 simple)";;
  "hashrate") echo -en "$(print_colorHost $1 ssh)";;
  "etn_values") echo -en "$(etn_current $1)";;
  "etn_acct") echo -en "$(etn_account $1)";;
  "printIt") echo -en "$1";;
  *)   echo -en "$(print_colorHost $1 $tst)";;
 esac
} ##isOnline

