#!/bin/bash

function UL(){
 [ "$2" == "" ] && stringZ= || stringZ="$2"
 c=0
 while [ $c -lt $1 ]; do
  c=$((c+1))
  stringZ="$stringZ""_"
 done
 [ "$2" == "" ] && echo -e "$stringZ" || echo -e "$stringZ${NC}"
} ##print underline

function SP(){
 stringZ=
 c=0
 while [ $c -lt $1 ]; do
  c=$((c+1))
  stringZ="$stringZ "
 done
 echo -e "$stringZ"
} ##print spaces

##for screens 100 characters wide or more
function print_glados_wide(){
 ## Width of the box
 W=98
#echo "$(UL $W)"
lim=21
c=1;while [ $c -le $lim ]; do 
 line=$(glados_wide_lines $c)
 [ "$line" != "" ] && echo -e "$line"
 c=$((c+1))
done
}
#print glados wide

##for screens 50 characters wide or more
function print_glados_narrow(){
 ## Width of the box
 W=55
lim=21
c=1;while [ $c -le $lim ]; do
 line=$(glados_narrow_lines $c)
 [ "$line" != "" ] && echo -e "$line"
 c=$((c+1))
done
}
#print glados narrow


function glados_wide_lines(){
 ## Width of the box
 W=98
 ## Reusable shapes
  #Space between top boxes
  SPC="${dark}|     | "
  #Line End
  LE="${dark}|   |${NC}"
  BE="${dark}|${NC}"
  #Boxes by width
  Box1="$(UL 17)"
  Box2="$(UL 10)"
  Box3="$(UL 14)"
  BoxTop="${dark}|_____| ${NC}"

  HighRightMargin=$(($W-$(greyLength "$Box3")))
  HRM=$(($HighRightMargin-5))
  LowRightMargin=$(($W-1))
  LRM=$LowRightMargin

 case "$1" in
  1) line="$(SP 2)${red}GLaDOS${dark}$(SP 31)${Box1}$(SP 7)${Box2}$(SP 7)${Box3}${NC}";;
  2) line="${dark} $(UL 13) ${light}.,-:;//;:-,${dark} $(UL 11)|${NC}      WAN        ${BoxTop}L:  $LOAD $BoxTop$CortanaUp     ${dark}|___";;
  3) line="${dark}|$(SP 10)${light}. :H000MM@M#H/.,+%;,$(SP 7)${dark}| ${cyan}$WANIP ${dark}$SPC${NC}C:  ${white}$NCPU${NC}    ${dark}$SPC$WheatleyUp    ${LE}";;
  4) line="${dark}|$(SP 7)${light},/X+ +M@@M@MM%=,-%HMMM@X/,${dark}    |      ${NC}VPN${dark}$(SP 8)$SPC${NC}Up: ${Days} ${dark}$SPC$BB8Up${dk_gray} Bedroom ${LE}";;
  5) line="${dark}|$(SP 5)${light}-+@MM; SM@@MH+-,;XMMMM@MMMM@+-  ${dark}| $VPNIP${NC} ${dark}$SPC${HTP_STAT}  ${dark}$SPC${R2D2Up}${dk_gray} Main   ${LE}";;
  6) line="${dark}|$(SP 4)${light};@M@@m- XM0X;. -+XXXXXHHH@M@M#@/.${dark}|${Box1}${dark}$SPC$SQL_STAT  ${dark}$SPC$ScholoUp ${LE}";;
  7) line="${dark}|   ${light}%MM@@MH ,@%=$(SP 12).---=-=:=,.${dark}$(SP 23)| $SMB_STAT    ${SPC}$ShodanUP$(SP 6)${LE}";;
  8) line="${dark}| ${light}=@#@@@MX .,$(SP 15)-%HXSS%%%+;$(SP 23)${dark}|${Box2}$SPC$FPorch  ${LE}";;
  9) ETN_VALUE_LINE="${NC}ETN->USD: ${ETN_VAL} ${ETN_day}% ${ETN_week}%";  
     line="${dark}|${light}=-./@M@MS$(SP 19).;@MMMM@MM:$(SP 2)${ETN_VALUE_LINE}";
     len=$(($(greyLength "$line")-3))
      [ $len -gt $HRM ] && S= || S=$(SP $(($(($HRM-$len)))));
     line="$line${S}${dark}| $BPorch   ${LE}";;

 10) line="${dark}|${light}X@/ -SMM/$(SP 21).+MM@@@M:$(SP 2)${NC}ETN: ${white}$ETN_Mined${dk_gray} ($etn_pending pending)${NC}$(SP 10)${dark}| $BYard    ${LE}";;
 11) line="${light},@M@H: :0:$(SP 21). =X#@@@@- ${NC}Purchased: ${white}${ExtraETN}${NC}$(SP 20)${dark}| $EGar  ${LE}";;
 12) line="${light}-@@@MMX, .$(SP 21)/H- ;@M@M= ${NC}Bal: ETN $ETN_Total   \$${mined_val}/${total_etn_val}"
     S=4
     line="$line$(SP $S)${dark}|_$WGar${dark}__${LE}";;
 13) line="${light}=H@@@@M@+,$(SP 21)%MM+..%#S.$(SP 57)${BE}";;
 14) 
#MinersLine="$VanUP${NC}: $VanHS  $ShodanUP${NC}: $ShodanHS  $SpaceUP${NC}: $SpaceHS   ${white}$added_miners${NC} H/s"
DiskPercent="$(glados_disks mirror perc)"
     line="${dark}|${light}/MMMM@MMH/.$(SP 19)XM@MH; =;   $DiskPercent"
     S=16
     line="$line$(SP $S)$BE";;
 15) line="${dark}| ${light}/%+%SXHH@S=$(SP 15), .H@@@@MX,$(SP 5)$(glados_disks used)"
     S=14
     line="$line$(SP $S)$BE";;
 16) line="${dark}|${light}  .=--------.$(SP 12)=%H.,@@@@@MX,$(SP 59)${BE}";;
 17) line="${dark}|${light}  .%MM@@@HHHXXSSS%+- .:SMMX =M@@MM%.$(SP 5)${NC}TV:     ${white}$NumTVadded ${NC}added on ${white}$TVaddedDate${NC}$(SP $((28-${#NumTVadded})))${BE}";;
 18) line="${dark}|${light}   =XMMM@MM@MM#H;,-+HMM@M+ /MMMX=$(SP 7)$NewShows$(SP 26)${BE}";;
 19) line="${dark}|${light}$(SP 6)-%@M@M#@S-.=S@MM@@@M; %M%-$(SP 9)${NC}Movies: ${white}$NumMoviesadded${NC} added on ${white}$MovieAddedDate${NC}$(SP $((28-${#NumMoviesadded})))${BE}";;
 20) line="${dark}|$(UL 7)${light},:+S+-,/H#MMMMMMM@- -, $(UL 67 ${dark})${BE}";;
 21) line="${light}$(SP 14)=++%%%%+/o-.${NC}$(SP 6)$TODO";;
  *) line=""
 esac
 echo -e "$line"
} #glados_wide_lines


function glados_narrow_lines(){
 ## Width of the box
 W=55
 ## Reusable shapes
  #Space between top boxes
  SPC="${dark}| | "
  #Line End
  LE="${dark}| |${NC}"
  BE="${dark}|${NC}"
  #Boxes by width
  Box1="$(UL 16)"
  Box2="$(UL 10)"
  Box3="$(UL 14)"
  BoxTop="${dark}|_| ${NC}"

 case "$1" in
  1) line="${red}GLaDOS${dark}${Box1}$(SP 3)${Box2}$(SP 3)${Box3}${NC}";;
  2) line="${dark} $(UL 4)|${NC}      WAN       ${BoxTop}L:  $LOAD $BoxTop$CortanaUp     ${dark}|_";;
  3) line="${dark}|$(SP 4)| ${cyan}$WANIP ${dark}$SPC${NC}C:  ${white}$NCPU${NC}    ${dark}$SPC$WheatleyUp    ${LE}";;
  4) line="${dark}|$(SP 4)|      ${NC}VPN${dark}$(SP 7)$SPC${NC}Up: ${Days}d ${dark}$SPC$BB8Up${dk_gray} Bedroom ${LE}";;
  5) line="${dark}|$(SP 4)| $VPNIP${NC} ${dark}$SPC${HTP_STAT}  ${dark}$SPC${R2D2Up}${dk_gray} Main   ${LE}";;
  6) line="${dark}|$(SP 4)|${Box1}${dark}$SPC$SQL_STAT  ${dark}$SPC$ScholoUp ${LE}";;
  7) line="${dark}|$(SP 4) ${Box1}  | $SMB_STAT    ${SPC}$ShodanUP$(SP 6)${LE}";;
  8) line="${dark}|$(SP 4)| ${NC}ETN: ${ETN_VAL}${dark}$(SP 4)| |${Box2}$SPC$FPorch  ${LE}";;
  9) line="${dark}|$(SP 4)|  ${white}$ETN_Mined${NC} ($etn_pending)${dark}|$(SP 14)| $BPorch   ${LE}";;
 10) line="${dark}|$(SP 4)| ${NC}+${white}${ExtraETN}${NC}${dark}$(SP 8)|$(SP 14)| $BYard    ${LE}";;
 11) line="${dark}|$(SP 4)| ${NC}=${white}$ETN_Total ${NC}ETN ${dark}  |  ${Box2}  | $EGar  ${LE}";;
 12) line="${dark}|$(SP 4)| ${NC} -----------  ${dark} | |    TV    | | $WGar${dark}  ${LE}";;
 13) line="${dark}|$(SP 4)| ${NC}\$$mined_val/${white}$total_etn_val${NC}${dark} | |${NC}Recent: ${white}$NumTVadded${NC}${dark} | |${Box3}${LE}";;
 14) line="${dark}|$(SP 4)|${Box1}| |${white}$TVaddedDate${NC}${dark}|  ${Box3}  |${NC}";;
 15) line="${dark}| ${white}$(kungfu_quote "$QUOTE" "NUM")${NC} $(kungfu_quote "$QUOTE" 1)${dark}|${NC}Avail :${white}$(get_new_shows simple)${NC}  ${dark}| |    Disks     ${LE}";;
 16) line="${dark}|$(SP 4)${NC}$(kungfu_quote "$QUOTE" 2)${dark}|  Movies  | |$(glados_disks simple mirror shares) $(glados_disks simple perc shares)  $LE";;
 17) line="${dark}|$(SP 4)${NC}$(kungfu_quote "$QUOTE" 3)${dark}|Recent: ${white}$NumMoviesadded${NC}${dark} | |$(glados_disks simple mirror movies) $(glados_disks simple perc movies)  $LE";;
 18) line="${dark}|$(SP 4)${NC}$(kungfu_quote "$QUOTE" 4)${dark}|${white}$MovieAddedDate${NC}${dark}| |$(glados_disks simple mirror tv)     $(glados_disks simple perc tv)  $LE";;
 19) line="${dark}|$(SP 4)${NC}$(kungfu_quote "$QUOTE" 5)${dark}|${Box2}| |${Box3}$LE";;
 20) line="${dark}|$(UL $(($W-3)))_|${NC}";;
21) line="$KFL";;
  *) line=""
 esac
 echo -e "$line"
} #glados_narrow_lines
