posterURL="posters/"

#ShowID="$1"
#ShowID="295829"

#posterID="7"
#fanartID="1"
#bannerID="g"
if [ "$1" == "" ]; then 
 echo -en "enter the show Name: "
 read SHOWNAME
else
 SHOWNAME="$1"
fi

#query="select thetvdb_id from VideoLibrary.tvShows where showname=\"$SHOWNAME\""
#SI=$(echo "$query" |mysql -N)
#if [ "$SI" != "" ]; then
# echo "query failed:  $query"
